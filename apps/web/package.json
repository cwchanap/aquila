{
  "name": "web",
  "private": true,
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev --port 5090",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:ui:e2e": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "db:migrate": "tsx src/lib/migrate.ts",
    "db:migrate:down": "tsx -e \"import('./src/lib/migrate.ts').then(m => m.migrateDown())\"",
    "db:migrate:local": "TURSO_DATABASE_URL=http://127.0.0.1:5091 tsx src/lib/migrate.ts",
    "db:test": "TURSO_DATABASE_URL=http://127.0.0.1:5091 tsx src/lib/db-test.ts",
    "db:setup": "pnpm db:migrate:local && pnpm db:test",
    "db:verify": "bash ../../scripts/verify-db.sh"
  },
  "dependencies": {
    "@aquila/game": "workspace:*",
    "@astrojs/mdx": "^4.3.4",
    "@astrojs/svelte": "^7.1.0",
    "@astrojs/vercel": "^8.2.6",
    "@libsql/client": "^0.15.12",
    "@libsql/kysely-libsql": "^0.4.1",
    "@tailwindcss/vite": "^4.1.3",
    "astro": "^5.13.3",
    "bcryptjs": "^3.0.2",
    "better-auth": "^1.3.7",
    "canvas-confetti": "^1.9.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "kysely": "^0.28.5",
    "lucide-react": "^0.541.0",
    "phaser": "^3.90.0",
    "svelte": "^5.38.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/canvas-confetti": "^1.9.0",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "typescript": "^5.9.2",
    "tsx": "^4.20.5",
    "tw-animate-css": "^1.3.7",
    "vitest": "^3.2.4",
    "@playwright/test": "^1.55.0"
  }
}
