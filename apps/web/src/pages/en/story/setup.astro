---
import MainLayout from '../../../layouts/main.astro';
import UserStatus from '../../../components/UserStatus.astro';
import { SimpleAuthService } from '../../../lib/simple-auth.js';
import { CharacterSetupRepository } from '../../../lib/repositories.js';
import { isValidStoryId, StoryId } from '../../../lib/story-types.js';
import en from '../../../translations/en.json';
import zh from '../../../translations/zh.json';

// Helper function to get translations
const t = (key: string): string => {
  const locale = Astro.currentLocale || 'en';
  const keys = key.split('.');
  let value: Record<string, unknown> = locale === 'zh' ? zh : en;

  for (const k of keys) {
    if (value && typeof value === 'object' && k in value) {
      value = value[k] as Record<string, unknown>;
    } else {
      return key;
    }
  }

  return typeof value === 'string' ? value : key;
};

// Get the story parameter from URL
const url = Astro.url;
const storyParam = url.searchParams.get('story');

// Validate story parameter
if (!storyParam || !isValidStoryId(storyParam)) {
  return Astro.redirect(`/${Astro.currentLocale || 'en'}/stories`);
}

const storyId = storyParam as StoryId;

// Try to get session from cookie (same as UserStatus component)
let user = null;
try {
  const sessionId = Astro.cookies.get('session')?.value;
  if (sessionId) {
    const session = await SimpleAuthService.getSession(sessionId);
    user = session?.user || null;
  }
} catch (error) {
  console.log('Auth session error:', error instanceof Error ? error.message : 'Unknown error');
}
const isAuthed = Boolean(user?.id);

// If authenticated, check if character setup already exists in DB
if (isAuthed && user?.id) {
  const existingSetup = await CharacterSetupRepository.findByUserAndStory(user.id, storyId);
  if (existingSetup) {
    return Astro.redirect(`/${Astro.currentLocale}/story/${storyId}`);
  }
}
---

<MainLayout title={t("setup.title")}>
  <!-- Ocean Background with animated waves -->
  <div id="setup-root" data-authed={isAuthed} data-story={storyId} class="min-h-screen relative overflow-hidden">
    <!-- Gradient Ocean Background -->
    <div class="absolute inset-0 bg-gradient-to-b from-sky-200 via-sky-300 to-blue-400"></div>

    <!-- Animated Ocean Waves (Background Layer) -->
