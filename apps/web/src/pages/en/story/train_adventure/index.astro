---
import MainLayout from '@/layouts/main.astro';
import { t as translate } from '@/lib/utils';

const locale = Astro.currentLocale || 'en';
const t = (key: string) => translate(locale, key);
---

<MainLayout title={t("adventure.title")}>
  <div class="flex h-screen w-full flex-col items-center justify-center bg-black px-4 text-center text-white">
    <h1 class="text-4xl font-semibold">
      {t("adventure.title")}
    </h1>
    <p class="mt-6 max-w-xl text-lg text-white/80">
      {t("adventure.desktop_only_notice")}
    </p>
  </div>
</MainLayout>