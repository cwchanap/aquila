{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": "./",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"],
      "@aquila/game": ["../../packages/game/src/index.ts"],
      "@aquila/game/*": ["../../packages/game/src/*"],
      "@aquila/assets": ["../../packages/assets"],
      "@aquila/assets/*": ["../../packages/assets/*"],
      "@aquila/dialogue/*": ["../../packages/dialogue/src/*"]
    }
  },
  "include": [
    "src",
    ".astro/types.d.ts",
    "../../packages/game/src"
  ],
  "exclude": [
    "dist"
  ]
}
