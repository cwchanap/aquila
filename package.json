{
  "name": "aquila",
  "private": true,
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@10.8.0",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:web": "pnpm --filter web dev",
    "dev:db": "turso dev --db-file ./db/dev.db --port 8080",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "test": "turbo run test",
    "test:e2e": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "prepare": "husky",
    "db:migrate": "pnpm --filter web db:migrate",
    "db:migrate:down": "pnpm --filter web db:migrate:down",
    "db:migrate:local": "pnpm --filter web db:migrate:local",
    "db:test": "pnpm --filter web db:test",
    "db:setup": "pnpm --filter web db:setup",
    "db:verify": "pnpm --filter web db:verify"
  },
  "dependencies": {
    "@playwright/test": "^1.55.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/node": "^24.3.1",
    "eslint": "^9.34.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-svelte": "^3.11.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "svelte-eslint-parser": "^1.3.1",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  },
  "pnpm": {
    "overrides": {
      "@libsql/core": "^0.15.12"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{astro,svelte}": [
      "eslint --fix"
    ]
  }
}
