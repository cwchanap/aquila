{
  "name": "aquila",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@10.8.0",
  "scripts": {
    "dev:app": "astro dev --port 5090",
    "dev:db": "turso dev --db-file ./db/dev.db --port 8080",
    "dev": "turbo run dev:app dev:db --parallel",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "db:migrate": "tsx src/lib/migrate.ts",
    "db:migrate:down": "tsx -e 'import { migrateDown } from \"./src/lib/migrate.js\"; migrateDown()\"",
    "db:migrate:local": "TURSO_DATABASE_URL=http://127.0.0.1:8080 tsx src/lib/migrate.ts",
    "db:test": "TURSO_DATABASE_URL=http://127.0.0.1:8080 tsx src/lib/db-test.ts",
    "db:setup": "npm run db:migrate:local && npm run db:test",
    "db:verify": "./scripts/verify-db.sh",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:unit": "vitest",
    "test:unit:run": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:unit:ui": "vitest --ui",
    "test:unit:watch": "vitest --watch"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.4",
    "@astrojs/svelte": "^7.1.0",
    "@astrojs/vercel": "^8.2.6",
    "@libsql/client": "^0.15.12",
    "@libsql/kysely-libsql": "^0.4.1",
    "@tailwindcss/vite": "^4.1.3",
    "@types/bcryptjs": "^3.0.0",
    "@types/canvas-confetti": "^1.9.0",
    "astro": "^5.13.3",
    "bcryptjs": "^3.0.2",
    "better-auth": "^1.3.7",
    "canvas-confetti": "^1.9.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "kysely": "^0.28.5",
    "lucide-react": "^0.541.0",
    "phaser": "^3.90.0",
    "svelte": "^5.38.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.3",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.1",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.34.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-svelte": "^3.11.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "svelte-eslint-parser": "^1.3.1",
    "tsx": "^4.20.5",
    "turbo": "^2.5.6",
    "tw-animate-css": "^1.3.7",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "@libsql/core": "^0.15.12"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{astro,svelte}": [
      "eslint --fix"
    ]
  }
}
