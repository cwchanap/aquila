{
  "name": "aquila",
  "private": true,
  "type": "module",
  "version": "0.0.1",
  "packageManager": "bun@1.1.26",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e --filter=e2e",
    "test:ui": "turbo run test:ui --filter=e2e",
    "test:headed": "turbo run test:headed --filter=e2e",
    "test:debug": "turbo run test:debug --filter=e2e",
    "test:report": "turbo run test:report --filter=e2e",
    "prepare": "husky",
    "drizzle:generate": "turbo run drizzle:generate --filter=web",
    "drizzle:migrate": "turbo run drizzle:migrate --filter=web",
    "drizzle:studio": "turbo run drizzle:studio --filter=web"
  },
  "dependencies": {},
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/node": "^24.3.1",
    "eslint": "^9.34.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-svelte": "^3.11.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "svelte-eslint-parser": "^1.3.1",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{astro,svelte}": [
      "eslint --fix"
    ]
  }
}