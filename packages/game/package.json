{
  "name": "@aquila/game",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly --declaration --declarationMap --outDir dist",
    "dev": "vite build --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint src",
    "test": "npx vitest run",
    "test:watch": "npx vitest"
  },
  "dependencies": {
    "@aquila/dialogue": "workspace:*"
  },
  "peerDependencies": {
    "phaser": "^3.90.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "jsdom": "^26.1.0",
    "typescript": "^5.9.2",
    "vite": "^6.0.3",
    "vitest": "^4.0.18"
  }
}