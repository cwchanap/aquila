---
import { SimpleAuthService } from '../lib/simple-auth.js'
import MainLayout from '../layouts/main.astro'

let user = null
let error = ''

try {
  // Get session from cookie
  const sessionId = Astro.cookies.get('session')?.value
  if (sessionId) {
    const session = await SimpleAuthService.getSession(sessionId)
    user = session?.user || null
  }
} catch (err) {
  console.log('Auth session error:', err instanceof Error ? err.message : 'Unknown error')
  error = 'Failed to load user data'
}

if (!user) {
  return Astro.redirect('/login')
}
---

<MainLayout title="Profile">
  <div class="min-h-screen bg-gradient-to-br from-blue-500 via-blue-600 to-green-500 flex items-center justify-center relative">
    <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 shadow-2xl border border-white/20 max-w-md w-full mx-4">
      <h1 class="text-3xl font-bold text-white text-center mb-8 drop-shadow-lg">
        User Profile
      </h1>

      {error && (
        <div class="mb-4 p-3 bg-red-500/20 border border-red-500/30 rounded-lg text-red-100 text-sm">
          {error}
        </div>
      )}

      <div class="space-y-6">
        <!-- User Info Display -->
        <div>
          <h2 class="text-xl font-semibold text-white mb-4">User Information</h2>

          <div class="space-y-3">
            <div>
              <label class="block text-sm font-medium text-white/80 mb-1">Name</label>
              <div class="px-3 py-2 bg-white/5 border border-white/20 rounded-lg text-white">
                {user.name || 'Not set'}
              </div>
            </div>

            <div>
              <label class="block text-sm font-medium text-white/80 mb-1">Email</label>
              <div class="px-3 py-2 bg-white/5 border border-white/20 rounded-lg text-white">
                {user.email}
              </div>
            </div>
          </div>
        </div>

        <!-- Password Change Form -->
        <div>
          <h2 class="text-xl font-semibold text-white mb-4">Change Password</h2>

          <form method="POST" action="/api/simple-auth/change-password" class="space-y-4">
            <div>
              <label for="currentPassword" class="block text-sm font-medium text-white/80 mb-1">
                Current Password
              </label>
              <input
                type="password"
                id="currentPassword"
                name="currentPassword"
                required
                class="w-full px-3 py-2 bg-white/5 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-white/30"
                placeholder="Enter current password"
              />
            </div>

            <div>
              <label for="newPassword" class="block text-sm font-medium text-white/80 mb-1">
                New Password
              </label>
              <input
                type="password"
                id="newPassword"
                name="newPassword"
                required
                minlength="6"
                class="w-full px-3 py-2 bg-white/5 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-white/30"
                placeholder="Enter new password"
              />
            </div>

            <div>
              <label for="confirmPassword" class="block text-sm font-medium text-white/80 mb-1">
                Confirm New Password
              </label>
              <input
                type="password"
                id="confirmPassword"
                name="confirmPassword"
                required
                minlength="6"
                class="w-full px-3 py-2 bg-white/5 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-white/30"
                placeholder="Confirm new password"
              />
            </div>

            <button
              type="submit"
              class="w-full py-3 px-4 bg-white/20 hover:bg-white/30 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 border border-white/30 backdrop-blur-sm"
            >
              Update Password
            </button>
          </form>
        </div>

        <!-- Back to Menu Button -->
        <a
          href="/"
          class="block w-full py-3 px-4 bg-white/10 hover:bg-white/20 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 border border-white/20 backdrop-blur-sm text-center"
        >
          Back to Menu
        </a>
      </div>
    </div>
  </div>
</MainLayout>