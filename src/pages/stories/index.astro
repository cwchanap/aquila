---
import MainLayout from '@/layouts/main.astro';
import Button from '@/components/ui/Button.svelte';
import UserStatus from '@/components/UserStatus.astro';
import { StoryId, STORY_NAMES } from '@/lib/story-types.js';
import { SimpleAuthService } from '@/lib/simple-auth.js';
import { CharacterSetupRepository } from '@/lib/repositories.js';

// Try to get session from cookie (same as UserStatus component)
let user = null;
try {
  const sessionId = Astro.cookies.get('session')?.value;
  if (sessionId) {
    const session = await SimpleAuthService.getSession(sessionId);
    user = session?.user || null;
  }
} catch (error) {
  console.log('Auth session error:', error instanceof Error ? error.message : 'Unknown error');
}
const isAuthed = Boolean(user?.id);

// Check if user has already set up character for train adventure
let hasCharacterSetup = false;
let characterName = '';
if (isAuthed && user?.id) {
  const existingSetup = await CharacterSetupRepository.findByUserAndStory(user.id, StoryId.TRAIN_ADVENTURE);
  if (existingSetup) {
    hasCharacterSetup = true;
    characterName = existingSetup.characterName;
  }
}
---

<MainLayout title="Select Story">
  <div class="min-h-screen bg-gradient-to-br from-blue-500 via-blue-600 to-green-500 flex items-center justify-center relative">
    <!-- Back button -->
    <a 
      href="/"
      class="absolute top-6 left-6 p-3 bg-white/20 hover:bg-white/30 text-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 border border-white/30 backdrop-blur-sm z-10"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
    </a>

    <!-- User status -->
    <UserStatus />

    <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 shadow-2xl border border-white/20 max-w-md w-full mx-4">
      <h1 class="text-4xl font-bold text-white text-center mb-8 drop-shadow-lg">
        Select Your Story
      </h1>

      <div class="space-y-4">
        <Button variant="menu" href={hasCharacterSetup ? `/story/${StoryId.TRAIN_ADVENTURE}?name=${encodeURIComponent(characterName)}` : `/story/setup?story=${StoryId.TRAIN_ADVENTURE}`} client:load>
          {STORY_NAMES[StoryId.TRAIN_ADVENTURE]}
        </Button>
        <!-- Add more story buttons here as needed -->
      </div>
    </div>
  </div>
</MainLayout>